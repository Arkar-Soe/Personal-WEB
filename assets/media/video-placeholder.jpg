<svg xmlns="http://www.w3.org/2000/svg" width="400" height="300" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1d2733;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f141b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="playGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#818cf8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6366f1;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect fill="url(#bgGrad)" width="400" height="300" rx="8"/>
  
  <!-- Outer circle -->
  <circle cx="200" cy="140" r="50" fill="none" stroke="#818cf8" stroke-width="3" opacity="0.3"/>
  
  <!-- Inner circle with gradient -->
  <circle cx="200" cy="140" r="40" fill="none" stroke="url(#playGrad)" stroke-width="3"/>
  
  <!-- Play triangle -->
  <polygon points="188,120 188,160 220,140" fill="url(#playGrad)"/>
  
  <!-- Text -->
  <text x="200" y="210" text-anchor="middle" fill="#9aa5b1" font-family="system-ui, -apple-system, sans-serif" font-size="14" font-weight="500">Video</text>
  
  <!-- Decorative lines -->
  <line x1="120" y1="240" x2="280" y2="240" stroke="#273544" stroke-width="2" stroke-linecap="round"/>
  <line x1="150" y1="255" x2="250" y2="255" stroke="#273544" stroke-width="2" stroke-linecap="round" opacity="0.5"/>
</svg>